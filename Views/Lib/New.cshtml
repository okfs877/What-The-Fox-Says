@model multilib.Models.Lib
@Html.Partial("./Partials/Navbar")
<div id="wrapper">
    <h1>Submit a MadLib</h1>
    <form asp-action="Create" asp-controller="Lib" method="post">
        <div class="form-group">
            <span asp-validation-for="Title"></span>
            <label asp-for="Title"></label>
            <input asp-for="Title">
        </div>
        <div class="form-group">
                <span asp-validation-for="Story"></span>
                <label asp-for="Story"></label><br>
                <textarea rows="10" cols="50" asp-for="Story"></textarea>
            </div>
        <div class="form-group">
            <span asp-validation-for="Mutator"></span>
            <label asp-for="Mutator"></label>
            <select asp-for="Mutator">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <p>Mutator represents the frequency at which words are replaced with 1 representing the lowest frequency and 5 being the highest.</p>
        </div>
        <input type="submit" value="Submit ðŸ¦Š" class="submit">
    </form>
</div>